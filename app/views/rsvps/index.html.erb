<h1>RSVPs</h1>

<%= @total_attending %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attending</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.name %></td>
        <td><%= rsvp.attending %></td>
        <td><%= rsvp.number %></td>
        <td><%= link_to 'Delete', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

